---
interface Props {
  id: string;
  title: string;
  date?: string;
  description?: string;
  tags: string[];
  images?: string[];
}

const { id, title, date, description, tags, images } = Astro.props;
---

<div
  class="overflow-hidden flex flex-col h-full bg-card text-card-foreground rounded-xl border py-6 shadow-sm"
>
  <div class="aspect-[4/3] bg-muted relative">
    {
      images && images.length > 0 ? (
        <img
          src={images[0]}
          alt={`${title} project screenshot`}
          class="object-contain absolute inset-0 w-full h-full"
        />
      ) : (
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-full h-full bg-gradient-to-br from-muted to-muted-foreground/10" />
        </div>
      )
    }
  </div>
  <div class="space-y-2 px-6 py-2">
    <div class="flex items-center justify-between">
      <h3 class="font-semibold text-lg">{title}</h3>
      <div class="flex items-center gap-1 text-xs text-muted-foreground">
        <!-- Calendar SVG icon -->
        <svg
          class="h-3 w-3"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
          ></path></svg
        >
        <span>{date}</span>
      </div>
    </div>
    <p class="text-sm text-muted-foreground">{description}</p>
  </div>
  <div class="flex-1 px-6 py-4">
    <div class="flex flex-wrap gap-2">
      {
        tags.map((tag) => (
          <span class="inline-flex items-center justify-center rounded-md border px-2 py-0.5 text-xs font-medium bg-secondary text-primary">
            {tag}
          </span>
        ))
      }
    </div>
  </div>
  <div class="flex items-center px-6">
    <a
      href={`/projects/${id}`}
      class="w-full bg-primary hover:bg-primary/90 text-primary-foreground font-medium rounded-md px-4 py-2 text-center"
      >See more â†’</a
    >
  </div>
</div>
