---
import { ArrowRight } from "lucide-react";
import ProjectCard from "../card/project-card.astro";
import { getProjectImages } from "../../utils/imageFinder";
import { projects } from "../../datas/projects";
---

<section id="projects" class="py-20 px-6 bg-muted/30">
  <div class="container mx-auto">
    <div class="flex justify-between items-center mb-12 flex-wrap gap-4">
      <h2 class="text-4xl font-bold">PROJECTS</h2>
      <a
        href="/projects"
        class="text-primary hover:text-primary/80 inline-flex items-center gap-2"
      >
        See all projects
        <ArrowRight size={16}/>
      </a>
    </div>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        projects.map((project) => {
          const images = getProjectImages(project.title);
          return <ProjectCard {...project} images={images} />;
        })
      }
    </div>
  </div>
</section>
