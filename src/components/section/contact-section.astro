<section id="contact" class="py-20 px-6">
  <div class="container mx-auto max-w-6xl">
    <h2 class="text-4xl font-bold text-center mb-12">CONTACT</h2>
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Illustration -->
      <div class="flex items-center justify-center">
        <img
          src="/me_phone.png"
          alt="Contact Illustration"
          class="w-full h-auto max-w-md"
        />
      </div>
      <!-- Contact Info -->
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-semibold mb-6">Keep in touch</h3>
          <p class="text-muted-foreground leading-relaxed mb-8">
            Feel free to reach out to me to discuss your projects, collaboration
            opportunities, or simply to chat about software development.
          </p>
        </div>
        <div class="space-y-4">
          <div class="flex items-center gap-4">
            <div class="bg-secondary p-3 rounded-lg">
              <img
                src="/icons/mailbox.svg"
                alt="Mail"
                class="h-5 w-5 text-primary color"
              />
            </div>
            <div>
              <p class="font-medium">Email</p>
              <p class="text-muted-foreground">ikagnana@gmail.com</p>
            </div>
          </div>
          <div class="flex items-center gap-4">
            <div class="bg-secondary p-3 rounded-lg">
              <img
                src="/icons/map-pin.svg"
                alt="Location"
                class="h-5 w-5 text-primary"
              />
            </div>
            <div>
              <p class="font-medium">Localisation</p>
              <p class="text-muted-foreground">Lyon, France</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
